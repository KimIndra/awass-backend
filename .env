# ===========================================
# AWASS Backend Environment Variables
# ===========================================
# Copy this file to .env and update values as needed

# Database (matches docker-compose.yml defaults)
DATABASE_URL=postgres://awass:awass_dev_password@localhost:5432/awass_db

# Better Auth
BETTER_AUTH_SECRET=awass-dev-secret-change-in-production
BETTER_AUTH_URL=http://localhost:3001

# Server
PORT=3001
NODE_ENV=development

# CORS (frontend URL)
CORS_ORIGIN=http://localhost:5173

# File uploads
UPLOAD_DIR=./uploads

# Admin seed secret (for initial admin creation)
ADMIN_SEED_SECRET=awass-seed-secret-123
